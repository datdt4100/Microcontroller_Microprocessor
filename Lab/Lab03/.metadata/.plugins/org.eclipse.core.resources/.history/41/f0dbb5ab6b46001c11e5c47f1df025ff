#ifndef INC_TASK_H_
#define INC_TASK_H_
#include "common.h"

#define MAX_TASK_SIZE	10

typedef struct task
{
	uint32_t TID;
	uint32_t Period;
	uint32_t Delay;
	uint8_t Priority;
	uint8_t RunMe;
	void (* pTask)();

	struct task* next;
} task_t;


task_t * taskList;
int taskSize;

task_t *createTask(	uint32_t, uint32_t, uint32_t, uint8_t, uint8_t, void(*)());
void addTask(task_t *pTask);
task_t *popTask();
uint8_t isEmpty();

#endif /* INC_TASK_H_ */
